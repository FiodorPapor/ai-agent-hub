{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "../wallet-service": ["../wallet-service"],
      "../agents/*": ["../agents/*"]
    }
  },
  "include": [
    "*.ts",
    "../agents/**/*.ts",
    "../wallet-service/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
